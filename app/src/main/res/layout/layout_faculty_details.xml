<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fimg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:src="@mipmap/ic_launcher"
                app:civ_border_width="2dp"
                app:civ_border_color="#ff000000"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/fname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ashish Patidar"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="25sp" />
                <TextView
                    android:id="@+id/frole"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Asistant Professor"
                    android:gravity="start"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/femail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="patidarashish@gmail.com"
                    android:gravity="start"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expertise in :"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="12sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
        <TextView
            android:id="@+id/fexpertise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HTML, CSS, JS, React, C, C++, JAVA, SQL, XML, DSA, MongoDB, Firebase, Data Science"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>

    </LinearLayout>



</androidx.cardview.widget.CardView>