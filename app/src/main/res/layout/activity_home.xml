<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/main_background">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guest User"
            android:textStyle="bold"
            android:layout_marginStart="22dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_margin="20dp">
            <LinearLayout

                android:id="@+id/btnChatBot"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/layout_shape"
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_marginEnd="10dp">
                <ImageView
                    android:id="@+id/imageVi"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/ic_bot"
                    android:contentDescription=""
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat with bot"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSecondary"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnWebsite"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:background="@drawable/layout_shape"
                android:orientation="vertical"
                android:layout_marginStart="10dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/ic_college"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:contentDescription=""/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Website"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSecondary"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_margin="20dp">
            <LinearLayout
                android:id="@+id/btn360View"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/layout_shape"
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_marginEnd="10dp">
                <ImageView
                    android:id="@+id/imageVew"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/ic_360view"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:contentDescription=""/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View College"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSecondary"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnBus"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:background="@drawable/layout_shape"
                android:orientation="vertical"
                android:layout_marginStart="10dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/ic_bus"
                    android:contentDescription=""
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find a bus"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSecondary"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_margin="20dp">
            <LinearLayout
                android:id="@+id/btnNotices"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/layout_shape"
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_marginEnd="10dp">
                <ImageView
                    android:id="@+id/imaeView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/ic_notice"
                    android:contentDescription=""
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notices"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSecondary"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnFaculty"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:background="@drawable/layout_shape"
                android:orientation="vertical"
                android:layout_marginStart="10dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/ic_teacher"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find a mentor"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSecondary"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_margin="20dp">
            <LinearLayout
                android:id="@+id/btnChangeLang"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/layout_shape"
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_marginEnd="10dp">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/ic_languages"
                    android:contentDescription=""
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change language"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSecondary"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnUser"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:background="@drawable/layout_shape"
                android:orientation="vertical"
                android:layout_marginStart="10dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/ic_user_profile"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:contentDescription=""/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Out"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSecondary"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version: 1.0"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"/>
    </LinearLayout>

</ScrollView>